<%= form_for score do |f| %>
  <%= f.text_field :home_team, placeholder: "Home team" %>
  <%= f.text_field :home_score, placeholder: "Home score" %>
  <br>
  <%= f.text_field :away_team, placeholder: "Away team" %>
  <%= f.text_field :away_score, placeholder: "Away team" %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
